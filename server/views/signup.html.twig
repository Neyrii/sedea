{% extends "base.html.twig" %}
{% block title %}
	Sign up page
{% endblock %}
{% block contenu %}
	<p class="text-warning mt-2">
		{{message}}
	</p>
	<form class="mt-3" method="POST" action="/signup">
		<fieldset>
			<legend>
				Sign Up
			</legend>
			<div class="form-group">
				<label class="form-label mt-4">Email address</label>
				<input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label class="form-label mt-4">Username</label>
				<input type="input" class="form-control" name="username" placeholder="Enter Username">
			</div>
			<div class="form-group">
				<label class="form-label mt-4">Password</label>
				<input type="password" class="form-control" name="password" placeholder="Password">
			</div>
			<div class="form-group">
				<label class="form-label mt-4">Informations</label>
				<textarea class="form-control" name="info" rows="3"></textarea>
			</div>
			<button type="submit" class="btn btn-primary mt-2">Sign Up</button>
		</fieldset>
	</form>
	<h6 class="mt-5">
		Already an Account ?
		<a href="/login">
			click here
		</a>
	</h6>
{% endblock %}
